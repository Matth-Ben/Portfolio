{% import "@components/quick-links.twig" as quicklinks %}
{% import "@components/header.twig" as header %}
{% import "@components/pannel.twig" as pannel %}
{% import "@components/grid-helper.twig" as gridhelper %}

<!DOCTYPE html>
<html lang="{{ get_current_language() }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Document</title>
		<meta charset="{{ site.charset }}">
		<meta name="description" content="{{ site.description }}">
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		{{ function('wp_head') }}
	</head>
	<body class="{% if _context._session.welcome %}welcome{% endif %}" wp-class="{{ body_class }}">
		{{ quicklinks.default() }}
		{{ header.default() }}
		<main id="app" role="main" tabindex="-1" data-taxi>
			<article data-taxi-view>
				{% block app %}{% endblock %}
			</article>
		</main>
		{{ footer.default() }}
		{{ alert.default() }}
		{{ pannel.default() }}
		{{ gridhelper.default(app_data) }}
		{{ function('wp_footer') }}
	</body>
</html>
