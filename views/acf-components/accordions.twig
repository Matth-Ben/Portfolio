{% macro default(data) %}
    {% if data %}
        <div class="accordions {% if data.one_by_one %}one-by-one{% endif %}">
            {% for item in data.items %}
                <div class="accordion">
                    <button class="accordion__header">
                        <p>{{ item.title }}</p>
                        <span>
                            {% include "@icons/chevron-down.svg" %}
                        </span>
                    </button>
                    <div class="accordion__body">
                        <div class="accordion__content">{{ item.content }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endmacro %}
